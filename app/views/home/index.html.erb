<main class="home">

  <h1>HOME</h1>

  <h2>La vulgarisation du jour</h2>
  <% if @long_format_day.present? %>
    <section class="last-longformat <%= category_name_from_id(@long_format_day.category_id) %> politique">
      <div class="container">
        <article class="article">
          <div class="content">
            <hgroup>
              <h3><%= link_to @long_format_day.title, @long_format_day %></h3>
              <p><%= @long_format_day.lead %></p>
            </hgroup>
            <div class="category <%= category_name_from_id(@long_format_day.category_id) %>">
              <%= category_name_from_id(@long_format_day.category_id) %>
            </div>
            <div class="media">
              <img src="<%= @long_format_day.thumbnail %>">
            </div>
          </div>
          <div class="meta"><%= @long_format_day.created_at.strftime('%d %B %Y') %></div>
        </article>
      </div>
    </section>
  <% else %>
    <span>Pas de vulgarisation publié aujourd'hui</span>
  <% end %>

  <h2>La dose d'actus du jour</h2>
  <% if @actus_day.any? %>
    <% @actus_day.each do |actus| %>
      <section class=" <%= category_name_from_id(actus.category_id) %> politique">
        <div class="container">
          <article class="article">
            <div class="content">
              <hgroup>
                <h3><%= link_to actus.title, actus %></h3>
                <p><%= actus.lead %></p>
              </hgroup>
              <div class="category <%= category_name_from_id(actus.category_id) %>">
                <%= category_name_from_id(actus.category_id) %>
              </div>
              <div class="media">
                <img src="<%= actus.thumbnail %>">
              </div>
            </div>
            <div class="meta"><%= actus.created_at.strftime('%d %B %Y') %></div>
          </article>
        </div>
      </section>
    <% end %>
  <% else %>
    <span>Pas d'actus publié aujourd'hui</span>
  <% end %>

</main>
