<header id="document-header">
  <div class="container">
    <a href="/" class="logo">
      <%= image_tag ("logo-black.svg")%>
      <span>Accueil</span>
    </a>
    <% if current_admin %>
      <a href="/admin">Dashboard</a>
    <% end %>
    <% if current_user %>
      <span class="streak">
        <%= consecutive_days_of_reading(current_user) %>
      </span>
      <a href="<%= user_path(current_user) %>">
        <img src="<%= current_user.avatar %>" class="avatar">
      </a>
    <% else %>
      <ul>
        <li>
          <%= button_to new_user_session_path do %>Se connecter<% end %>
        </li>
        <li>
          <%= link_to 'Inscription', new_user_registration_path %>
        </li>
      </ul>
    <% end %>
  </div>
</header>