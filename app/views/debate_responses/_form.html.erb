<%= form_with model: [@debate, DebateResponse.new], url: debate_debate_responses_path(@debate) do |form| %>
  <div class="form-group">
    <%= form.label :content, "Votre réponse" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "Poster la réponse" %>
  </div>
<% end %>